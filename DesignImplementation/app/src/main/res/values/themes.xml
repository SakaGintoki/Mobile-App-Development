<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- App theme -->
    <style name="Theme.LittleSteps" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- System splash theme -->
    <style name="Theme.LittleSteps.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <!-- can be @mipmap/ic_launcher or your logo in drawable -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_littlesteps_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.LittleSteps</item>
    </style>

</resources>
